<div class='row'>
	<div class="col-12 text-center text-light">
		<h1>Open Payment Requests</h1>
		<%if (payments.length > 0) { %>
			Below you can find the request(s) you still have to pay.
			<br /><br />
			<div class='row'>
				<% payments.forEach(payment => { %>
					<div class='col-12 col-lg-6'>
						<div class='card bg-dark text-light text-center mb-3 p-0 rounded-0 border-light'>
							<div class='p-3'>
								<div>
									<span class="float-left"><small><%= payment.dateCreated %></small></span>
									<span class="float-right"><small>To: <%= payment.owner %></small></span>
								</div>
								<h5 class='text-center'><%= payment.debtorXrp %> XRP</h6>
								<span class="text-center d-block mt-2 mb-2"><%= payment.description %></span>
								<span class='text-center'>Bill total: <%= payment.totalXrp %> XRP</span>
							</div>

							<button type="submit" class="btn btn-secondary submit-request" id="<%= payment.id %>">Submit Payment</button>
						</div>
					</div>
				<% }) %>
			</div>
		<% } else{ %>  
			<p>You have no open payment requests</p>
		<% } %>
	</div>
	<script src="/events/PaymentScriptBundled.js"></script>
	<div hidden id="rippleServer"><%= rippleServer %></div>
</div>