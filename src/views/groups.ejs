<div class='row'>
	<div class="col-12 col-lg-12 text-light">
		<h1 class='text-center'>
			My Groups
		</h1>
		<br />

		<div class='row'>
			<% groups.forEach(function(group) { %>
				<div class='col-12 col-lg-4'>
					<div class='card text-center group-item bg-secondary rounded-0 mb-3' data-id="<%= group.id %>">
						<div class='card-body'>
							<h5 class='card-title'><%= group.name %></h5>
							<div class='card-text'>
								<h3><span><%= group.description %></span></h3>
							</div>
						</div>
					</div>
				</div>
			<% }) %>
		</div>

		<br />

		<h1 class='col-12 text-center mt-3 mb-3'>Create new group</h1>
		<div class='row mb-3'>
			<div class='col-4'></div>
			<div class='col-4'>
				<input type="text" class="form-control" id="groupName" placeholder="Group name">
			</div>
		</div>
		<div class='row mb-3'>
			<div class='col-4'></div>
			<div class='col-4'>
				<input type="text" class="form-control" id="groupDescription" placeholder="Group description">
			</div>
		</div>
		<div class='row mb-3'>
			<div class='col-4'></div>
			<div class='col-4'>
				<button type="submit" class="btn btn-secondary col-12 mt-0 submit-request" id="newGroup">Create group</button>
			</div>
		</div>
		<div class='col-12 text-center mt-3 mb-3 text-success' id="group-success" style="display: none;"></div>
		<div class='col-12 text-center mt-3 mb-3 text-error' id="group-error" style="display: none;"></div>
	</div>
</div>

<script src="/events/GroupsScriptBundled.js"></script>
