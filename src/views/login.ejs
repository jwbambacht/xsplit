<div class='row'>
	<div class="col-12 col-lg-6 offset-lg-3 text-center text-light">
		<img src='/assets/img/xplit-light.svg' width='200px' height='auto' />

		<h1>Login</h1>
		Please enter your username and password.
		<br /><br />
		
		<form id="loginForm">
			<div class="form-group">
  				<input type="text" class="form-control form-control-lg" id="userName" name="userName" required placeholder="Username" />
			</div>
			<div class="form-group">
  				<input type="password" class="form-control form-control-lg" id="secret" required placeholder="Secret" />
			</div>
			<div class="form-group">
  				<button type="submit" id="login" class="btn btn-secondary btn-lg col-12">Login</button>
			</div>
      <p id="parseError" class="d-none text-danger">Cannot parse secret. Please check the format!</p>
			<p id="invalidFields" class="d-none text-danger">Invalid username and/or secret!</p>

			<a href="#" class='text-muted float-left'>Forgot password?</a><a href="./register" class='text-light float-right'>Create new account</a>
		</form>
	</div>
	<script src="/events/LoginScriptBundled.js"></script>
</div>
