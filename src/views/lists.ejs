<div class='row'>
	<div class="col-12 col-lg-12 text-light">
		<h1 class='text-center'>
			My Lists
		</h1>
		<br />

		<div class='row'>
			<% lists.forEach(function(list) { %>
				<div class='col-12 col-lg-4'>
					<div class='card text-center list-item bg-secondary rounded-0 mb-3' data-id="<%= list.id %>">
						<div class='card-body'>
							<h5 class='card-title'><%= list.name %></h5>
							<div class='card-text'>
								<h><span class="badge badge-light <% if(list.balancePolarity === '+') { %>text-success<%} else if (list.balancePolarity === '-') { %>text-danger<% } %>">&euro;<%= list.balance %></span></h3>
							</div>
						</div>
					</div>
				</div>
			<% }) %>
		</div>

		<br />

		<div class='row'>
			<div class="col-12 text-center">
				<a href="#" class="text-muted">Create new list...</a>
			</div>
		</div>
	</div>
</div>

<script src="/events/ListsScriptBundled.js"></script>
